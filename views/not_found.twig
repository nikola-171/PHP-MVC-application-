{% extends 'layout.twig' %}
{% block title %} {{pretraga}} {% endblock %}


{% block link %}

{% if ulogovan is defined %}
            <a href="/odjava" class="nav-item nav-link">{{odjava}}</a>

{% else %}

            <a href="/vrstaRegistracije" class="nav-item nav-link">{{registruj_se}}</a>
            <a href="/vrstaLogovanja" class="nav-item nav-link">{{ulogujte_se}}</a>
{% endif %}

{% endblock %}
