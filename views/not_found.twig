{% block pretraga %}{{pretraga}}{% endblock %}
{% block content %}

<div class="container" style="text-align:center;margin-top:10%;">
        <div class="alert alert-dark">
            <h3>{{msg}}</h3>
            <a href="/"><button type="button" class="btn btn-secondary">{{pocetna}}</button></a>
        </div>
    </div> 
    
{% endblock %}




