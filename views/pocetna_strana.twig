{% endif %}

     <div class="container" style="text-align:center;">

             {% for item in sadrzaj %}
                <div class="komentar">
                    <hr>
                    <h5>{{item.naziv}} - {{item.datum}}</h5>
                    <h5>{{item.naslov}}</h5>
                    {% if auth == 'company' %}
                        {% if korisnik == item.preduzece %}
                            <form action="/izbrisiObjavu" method="post">
                                <div class="form-group">
                                    <input type="hidden" name="id" value="{{item.id}}">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">{{objava_obrisi}}</button>
                                </div>
                            </form>
                        {% endif %}
                    {% endif %}
                    
                    <p>{{item.sadrzaj}}</p>
                    {% if item.putanja_slike != null %}
                        {% if item.orijentacija == "s" %}
                            <div class="container">
                                <img src="/../{{item.putanja_slike}}" class="rounded sira" >
                            </div>
                        {% else %}
                            <div class="container">
                                <img src="/../{{item.putanja_slike}}" class="rounded visa">
                            </div>
                        {% endif %}
                        
                    {% endif %}
                    <h3> {{item.tekst}}  </h3>
                    <a href="/objava/prikaz?id_objave={{item.id}}"><button type="button" class="btn btn-primary">{{prikaz}}</button></a>
                    <hr>
                </div>

            
            {% endfor %}
            <div id="rez"></div>
            <button type="button" class="btn btn-success" style="margin-bottom:4vh;" id="ucitavanje">{{ucitaj}}</button>
            
        </div>
     


   
    <script type="text/javascript">
        var nema = '{{nema}}';
        var id_zadnjeg_komentara = {{id_zadnjeg}};
        var korisnik = {{korisnik}};
        var auth = "{{auth}}";
        var datum = ""; 
        var datumParam = "";
        var naziv = "";
        var naslov = "";
        var sadrzi = "";
        {% if datum != "" %}
        datum = "{{datum}}";
        {% endif %}
        {% if datumParam != "" %}
        datumParam = "{{datumParam}}";
        {% endif %}
        {% if naziv != "" %}
        naziv = "{{naziv}}";
        {% endif %}
        {% if naslov != "" %}
        naslov = "{{naslov}}";
        {% endif %}
        {% if sadrzi != "" %}
        sadrzi = "{{sadrzi}}";
        {% endif %}

        if(datumParam == "&gt;"){
            datumParam = '>';
        }

        if(datumParam == "&lt;"){
            datumParam = '<';
        }
        let prazna = '{{prazna}}';
    </script>
    <script src="/../src/javascript/pocetna_strana.js" type="text/javascript"></script>
    
{% endblock %}

