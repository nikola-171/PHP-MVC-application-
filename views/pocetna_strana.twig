{% extends 'layout.twig' %}

{% block title %}
    {{pocetna_strana}}
{% endblock %}

{% block stil %}
    <link rel="stylesheet" type="text/css" href="/../src/Styles/pocetna_strana.css">
{% endblock %}

{% block link %}
<a href="/odjava" class="nav-item nav-link">{{odjava}}</a>

{% endblock %}
{% block placeholder %}{{placeholder}}{% endblock %}
{% block pretraga %}{{pretraga}}{% endblock %}
{% block content %}

{% if auth == "company" %}
    <div class="row m-0" id="prikaz_veliki_uredjaj">
        <div class="col-3">
            <div style="text-align:left;" id="pretraga">
                <h5>{{filter_naslov_sekcije}}</h5>
                <form action="" method="get" id="forma_sadrzaj">
                    <div class="form-group">
                        <label >{{filter_datum}}</label>
                        <input type="date" name="datum" max="2020-12-31" 
                               min="2000-01-01" class="form-control">
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="customRadio" name="datumParam" value="<=">
                        <label class="custom-control-label" for="customRadio">{{filter_datum_pre}}</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="customRadio2" name="datumParam" value=">=">
                        <label class="custom-control-label" for="customRadio2">{{filter_datum_posle}}</label>
                    </div> 
                    <div class="form-group">
                        <label>{{filter_naziv}}</label>
                        <input type="text" name="naziv" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>{{filter_naslov}}</label>
                        <input type="text" name="naslov" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>{{filter_sadrzi}}</label>
                        <input type="text" name="sadrzi" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">{{pretraga}}</button>
                        <button type="button" id="reset" class="btn btn-success">Reset</button>
                    </div>
                </form>
                
            </div>
            <button onclick="topFunction()" id="myBtn" class="btn btn-success" style="display:none; position:fixed; bottom:5;">
                <img src="/../src/Images/gore.png"/ height="25" width="27">
            </button>
        </div>

        <div class="col-6">
            <div class="container" id="objava">
               <form action="/postaviKomentar" onsubmit="return test()" enctype="multipart/form-data" method="post">
                    <h3 class="h3">{{dogadjaj_naslov_sekcije}}</h3>
                    <div class="form-group">
                        <textarea class="form-control" id="naslov" name="naslov" rows="2" style="resize:none;" placeholder="{{dogadjaj_naslov}}"></textarea>
                    </div>
                     <div class="form-group">
                        <textarea class="form-control" id="sadrzaj" name="sadrzaj" rows="7" style="resize:none;" placeholder="{{dogadjaj_tekst}}"></textarea>
                    </div>
                    <div class="form-group">
                        <label>{{dogadjaj_datum}}:</label>
                        <input type="date" value='' id="datum" name="datum" class="form-control">
                    </div>
                   <div class="btn btn-group">
                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="image" id="image">
                                <label class="custom-file-label" for="customFile">{{dogadjaj_slika}}</label>
                            </div>
                        </div>
                   </div>
                   <div class="form-group">
                        <button type="submit"  class="btn btn-success">{{postavi}}</button>
                   </div>
                </form>
                <hr>

            </div>
            
        </div>

        <div class="col-3">
            <div class="container" style="margin-top:5vh;">
                <blockquote class="blockquote">
                    <p class="mb-0"><cite>{{citat}}</cite></p>
                    <footer class="blockquote-footer">{{citat_autor}}</footer>
                </blockquote>            
            </div>
        </div>

     </div>
{% endif %}
